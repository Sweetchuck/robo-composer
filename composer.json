{
    "name": "sweetchuck/robo-composer",
    "description": "Robo task wrapper for Composer",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "require": {
        "php": ">=7.1",
        "sweetchuck/lint-report": "^0.0",
        "consolidation/robo": "^1.0"
    },
    "require-dev": {
        "codeception/codeception": "^2.2",
        "sweetchuck/codeception-module-robo-task-runner": "^0.0",
        "sweetchuck/git-hooks": "^0.0",
        "sweetchuck/robo-git": "^0.0",
        "sweetchuck/robo-phpcs": "^0.0.19",
        "symfony/yaml": "^3.1 || ^4.0",
        "webmozart/path-util": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Sweetchuck\\Robo\\Composer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sweetchuck\\Robo\\Composer\\Test\\Helper\\": "tests/_support/Helper/",
            "Sweetchuck\\Robo\\Composer\\Tests\\Acceptance\\": "tests/acceptance/",
            "Sweetchuck\\Robo\\Composer\\Tests\\Unit\\": "tests/unit/"
        },
        "classmap": [
            "tests/_data/ComposerRoboFile.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "@deploy-git-hooks"
        ],
        "post-update-cmd": [
            "@deploy-git-hooks"
        ],
        "deploy-git-hooks": "\\Sweetchuck\\GitHooks\\Composer\\Scripts::deploy"
    }
}
